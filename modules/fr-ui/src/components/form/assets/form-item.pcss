

.item-group {
    display: flex;
    flex-direction: row;
    align-items: center;

    .form-item:first-child{
        padding-right: 5px;
    }
    .form-item:last-child {
        padding-left: 5px;
    }
}

.appearance-panel {
    color: #5b6b73;
    padding: 12px 10px;
}

.form-item {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    min-height: 22px;

    .error {
        color: #ff190c
    }

    .required {

        &.hide{
            color: #fff;
            opacity: 0;
        }
    }

    .left-label {
        height: 22px;
        color: #1f292e;
        line-height: 22px;
        width: 60px;
    }

    .right-content {
        display: flex;
        flex: 1;
        flex-wrap: wrap;
        -webkit-box-pack: justify;
        justify-content: space-between;
        align-items: center;
    }

}
